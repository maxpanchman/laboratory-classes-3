<!DOCTYPE html>
<html>

<head>
    <title>
        <%= headTitle %>
    </title>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('partials/navigation', { menuLinks: menuLinks, activeLinkPath: activeLinkPath }) %>
        <main>
            <h1 class="heading">Add Product</h1>
            <form action="/products/add" method="POST" class="form">
                <div class="form__group">
                    <label for="name" class="form__label">Name:</label>
                    <input type="text" id="name" name="name" class="form__input" required>
                </div>
                <div class="form__group">
                    <label for="description" class="form__label">Description:</label>
                    <textarea id="description" name="description" class="form__input" required></textarea>
                </div>
                <button type="submit" class="button">Add Product</button>
            </form>
        </main>
</body>

</html>